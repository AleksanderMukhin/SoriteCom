{% extends 'base.html.twig' %}

{% block body %}
<br>
<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    {% if user.photo is not null %}
                        <img src="{{ asset('uploads/photos/' ~ user.photo) }}" class="card-img" alt="Photo de profil">
                    {% else %}
                        <p class="card-text">Aucune photo de profil disponible.</p>
                    {% endif %}
                </div>
                <div class="col-md-5">
                    <h2 class="card-title">Profil de {{ user.username }}</h2><br>
                    <div class="container">
                        <p><strong>Prenom:</strong> {{ user.firstName }}</p>
                        <p><strong>Nom:</strong> {{ user.lastName }}</p>
                        <p><strong>Telephone:</strong> {{ user.telephone }}</p>
                        <p><strong>Email:</strong> {{ user.email }}</p>
                        <p><strong>Campus:</strong> {{ user.campus }}</p>
                    </div>

                </div>

            </div>

        </div>

    </div>
    <div class="mt-4 mb-4 d-flex justify-content-center">
        <a href="{{ path('profile_edit') }}" class="btn btn-primary">Modifier le profil</a>
    </div>
</div>



{% endblock %}
