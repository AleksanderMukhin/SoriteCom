{% extends 'base.html.twig' %}

{% block body %}
<div style="height: 20px;"></div>
<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Modifier le profil</h3>
                </div>
                <div class="card-body">
                    <form method="post" class="w-100" enctype="multipart/form-data">

                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Répéter le mot de passe'}}) }}
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Prenom'}}) }}
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Numero de telephone'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.campus, {'attr': {'class': 'form-control', 'placeholder': 'A relier avec la db pour afficher les campus dispo'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.photo, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <button class="btn btn-primary" type="submit">Enregistrer les modifications</button>
                            <a class="btn btn-secondary" href="{{ path('profile') }}">Annuler</a>
                        </div>
                        {{ form_end(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="height: 20px;"></div>

{% endblock %}
