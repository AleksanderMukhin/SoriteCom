{% extends 'base.html.twig' %}

{% block body %}
<div>

    <div class="container">
        <div class="d-flex justify-content-center align-items-center flex-column" style="height: 80vh;">
            <h1 class="h3 mb-3 font-weight-normal">Modifier le profil</h1>
            <form method="post" class="w-50" enctype="multipart/form-data">

                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_row(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Répéter le mot de passe'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.photo, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-5 d-flex justify-content-center">
                    <button class="btn btn-lg btn-primary" type="submit">Enregistrer les modifications</button>
                    <a class="btn btn-lg btn-primary ml-5" href="{{ path('profile') }}">Annuler</a>
                </div>
                {{ form_end(form) }}
            </form>

        </div>

    </div>

</div>

{% endblock %}

