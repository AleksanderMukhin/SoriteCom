{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-4">Créer une sortie</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form id="createSortieForm" action="{{ path('sortie_creer') }}" method="post">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_row(form.sNom, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la sortie'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.sDescription, {'attr': {'class': 'form-control', 'placeholder': 'Description de la sortie'}}) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.sDateHeureDebut, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.sDuree, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.sDateLimiteInscription, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.sNombreInscriptionMax, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.sCampus, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <hr class="mb-4">
                    <div class="mb-3">
                        <button class="btn btn-primary btn-lg btn-block" type="submit">Créer la sortie</button>
                        <a href="{{ path('accueil')}}" class="btn btn-danger btn-lg btn-block">Retour</a>
                        </div>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
