{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1 class="mt-5 mb-4">Modifier une sortie</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form id="createSortieForm" action="{{ path('modification_sortie', {'id': sortie.id}) }}" method="post">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="mb-3">
                    {{ form_row(form.sNom, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la sortie','value':form.vars.value.sNom}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.sDescription, {'attr': {'class': 'form-control', 'placeholder': 'Description de la sortie','value':form.vars.value.sDescription}}) }}
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.sDateHeureDebut, {'attr': {'class': 'form-control','value':form.vars.value.sDateHeureDebut|date("Y-m-d H:i:s")}}) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.sDuree, {'attr': {'class': 'form-control','value':form.vars.value.sDuree|date("H:i:s")}}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.sDateLimiteInscription, {'attr': {'class': 'form-control','value':form.vars.value.sDateLimiteInscription|date("Y-m-d H:i:s")}}) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.sNombreInscriptionMax, {'attr': {'class': 'form-control','value':form.vars.value.sNombreInscriptionMax}}) }}
                    </div>
                </div>
                <div class="mb-3">
                    <label for="campus">Campus : </label>
                    <select name="campus" id="campus" class="form-select">
                        {% for campus in campuses %}
                        <option value="{{ campus.id }}" {% if form.vars.value.sCampus == campus.id %} selected {% endif %}>{{ campus.nom }}</option>
                        {% endfor %}
                    </select>
                </div>
<hr class="mb-4"/>
<div class="row">
    <div class="col-md-6 mb-3">
        <button class="btn btn-primary btn-lg btn-block" type="submit">Enregistrer</button>
        <a href="{{ path('accueil')}}" class="btn btn-danger btn-lg btn-block">Retour</a>
    </div>
    <div class="col-md-6 mb-3 text-end">
        <a href="{{ path('supprimer_sortie', {'id': sortie.id}) }}" class="btn btn-danger btn-lg">Supprimer</a>
    </div>
</div>

                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}
