{% extends 'main/accueil.html.twig' %}

{% block listeSorties %}

{% for uneSortie in sorties %}}
<tr>
    <th>{{ uneSortie.sNom }}</th>
    <th>{{ uneSortie.sDateHeureDebut.format('Y-m-d H:i') }}</th>
    <th>{{ uneSortie.sDateLimiteInscription.format('Y-m-d H:i') }}</th>
    <th>{{ uneSortie.sNombreInscriptionMax }}</th>
    <th>{{ uneSortie.sEtat }}</th>
    <th>{% if uneSortie.sEtat == "Ouvert" %}
            Afficher - S'inscrire
        {% else %}
            Afficher
        {% endif %}
    </th>
</tr>
{% endfor %}

{% endblock %}